<div class="window">
	<div class="userdisplaycontainer">
		<div id="userdisplayin">
			<h1>Update your Profile</h1>
			<%= form_for @profile do |f| %>
			<%= f.label :name_or_designation %>
			<%= f.text_field :name %>
			<%= f.label :ship %>
			<%= f.text_field :ship %>
			<%= f.label :home_planet %>
			<%= f.text_field :planet %>
			<%= f.label :weapon_of_choice %>
			<%= f.text_field :weapon %>
			<%= f.label :state_a_side %>
			<%= f.text_field :side %>
			<%= f.label :avatar %>
			<%= f.file_field :avatar %>
			<%= f.submit :update %>
			<% end %>
		</div>
	</div>
	<div class="planet"></div>
	<div class="locate">
		<div class="lm1 locateturn" id="lt1"></div>
	</div>
	<div class="optics">
		<div class="cm1 opticturn" id="ot1"></div>
		<div class="cm2 opticturn" id="ot2"></div>
		<div class="cm3 opticturn" id="ot3"></div>
		<div class="cm4 opticturn" id="ot4"></div>
	</div>
</div>