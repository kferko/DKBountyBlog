<div class="window">
	<div class="userdisplaycontainer">
		<div id="userdisplayin">
			<%= content_tag :h1, "These are the posts." %>
				<% @posts.each do |post| %>
				<%= content_tag :h4, "Post Body."%>
				<%= post.body %>
				<% @posts.each do |post| %>
				<%= content_tag :h4, "Post Title." ; link_to post.title, post_path(post.id)%>
				<% end %>
				<% @posts.each do |post| %>
				<%= content_tag :h4, "Post Author." ; post.user.username %>
				<% end %>
				<%= link_to("Delete Post", post_path(post.id), method: :delete) %>
			<% end %>
		</div>
	</div>
	<div class="planet"></div>
	<div class="locate">
		<div class="lm1 locateturn" id="lt1"></div>
	</div>
	<div class="optics">
