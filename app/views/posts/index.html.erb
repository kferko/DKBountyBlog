<%= content_tag :h1, "These are the posts." %>
<% @posts.each do |post| %>
<%= content_tag :h4, "Post Title."%>
<%= link_to post.title, post_path(post.id) %>
<br>
<%= content_tag :h4, "Post Body."%>
<%= post.body %>
<br>
<%= content_tag :h4, "Post Author."%>
<%= post.user.username %>
<br>

	<%= link_to("Delete Post", post_path(post.id), method: :delete) %>
<br><br>
	<% post.comments.each do |comment| %>
	<%= content_tag :p, "Comment Title."%>
	<%= comment.title %>
	<%= content_tag :p, "Comment Body." %>
	<%= comment.body %>
	<%= content_tag :p, " Comment Author." %>
	<%= comment.user.username %>
	<%= link_to("Delete comment", comment_path(comment.id), method: :delete) %>
	<% end %>
	<br><br>
<% end %>
<br>
